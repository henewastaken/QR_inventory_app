<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/testFragment">

    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.testi.TestFragment"
        android:label="Main screen"
        tools:layout="@layout/fragment_test">
        <action
            android:id="@+id/action_testFragment_to_scanFragment"
            app:destination="@id/scanFragment" />
    </fragment>

    <fragment
        android:id="@+id/scanFragment"
        android:name="com.example.testi.ScanFragment"
        android:label="Scan"
        tools:layout="@layout/fragment_test" >
        <action
            android:id="@+id/action_scanFragment_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>

</navigation>